<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:FlowGraph.Avalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="150"
             x:Class="FlowGraph.Avalonia.Controls.FlowMinimap"
             Width="200" Height="150">

  <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
          BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
          BorderThickness="1"
          CornerRadius="4"
          Opacity="0.95"
          ClipToBounds="True">
    <local:MinimapRenderControl Name="MinimapRenderControl"/>
  </Border>

</UserControl>
