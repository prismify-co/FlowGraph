<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="44" d:DesignHeight="180"
             x:Class="FlowGraph.Avalonia.Controls.FlowControls">

  <!-- 
    Icons from Lucide (https://lucide.dev) - ISC License
    Path data extracted for use without runtime dependency
  -->

  <UserControl.Styles>
    <Style Selector="Button.flow-control">
      <Setter Property="Width" Value="32"/>
      <Setter Property="Height" Value="32"/>
      <Setter Property="Padding" Value="0"/>
      <Setter Property="Background" Value="Transparent"/>
      <Setter Property="BorderThickness" Value="0"/>
      <Setter Property="HorizontalContentAlignment" Value="Center"/>
      <Setter Property="VerticalContentAlignment" Value="Center"/>
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Button.flow-control:pointerover">
      <Setter Property="Background" Value="{DynamicResource FlowControlsButtonHover}"/>
    </Style>
    <Style Selector="Button.flow-control:pressed">
      <Setter Property="Background" Value="{DynamicResource FlowControlsButtonPressed}"/>
    </Style>
    <Style Selector="Button.flow-control Path">
      <Setter Property="Stroke" Value="{DynamicResource FlowControlsIconStroke}"/>
      <Setter Property="StrokeThickness" Value="2"/>
      <Setter Property="StrokeLineCap" Value="Round"/>
    </Style>
  </UserControl.Styles>

  <UserControl.Resources>
    <!-- Default theme resources (can be overridden) -->
    <SolidColorBrush x:Key="FlowControlsBackground" Color="#F8FAFB"/>
    <SolidColorBrush x:Key="FlowControlsBorder" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="FlowControlsButtonHover" Color="#F1F5F9"/>
    <SolidColorBrush x:Key="FlowControlsButtonPressed" Color="#E2E8F0"/>
    <SolidColorBrush x:Key="FlowControlsIconStroke" Color="#475569"/>
    <SolidColorBrush x:Key="FlowControlsSeparator" Color="#E2E8F0"/>
  </UserControl.Resources>

  <Border Background="{DynamicResource FlowControlsBackground}"
          BorderBrush="{DynamicResource FlowControlsBorder}"
          BorderThickness="1"
          CornerRadius="8"
          Padding="4"
          BoxShadow="0 1 3 0 #1A000000, 0 1 2 -1 #1A000000">
    <StackPanel Name="ButtonPanel" Spacing="2">
      
      <!-- Zoom In (Lucide: plus) -->
      <Button Name="ZoomInButton" 
              Classes="flow-control"
              ToolTip.Tip="Zoom In">
        <Path Data="M5 12h14M12 5v14" Width="24" Height="24" Stretch="None"/>
      </Button>
      
      <!-- Zoom Out (Lucide: minus) -->
      <Button Name="ZoomOutButton"
              Classes="flow-control"
              ToolTip.Tip="Zoom Out">
        <Path Data="M5 12h14" Width="24" Height="24" Stretch="None"/>
      </Button>
      
      <Rectangle Height="1" 
                 Fill="{DynamicResource FlowControlsSeparator}" 
                 Margin="6,4"/>
      
      <!-- Fit to View (Lucide: maximize-2) -->
      <Button Name="FitViewButton"
              Classes="flow-control"
              ToolTip.Tip="Fit to View">
        <Path Data="M15 3h6v6M9 21H3v-6M21 3l-7 7M3 21l7-7" Width="24" Height="24" Stretch="None"/>
      </Button>
      
      <!-- Reset Zoom -->
      <Button Name="ResetZoomButton"
              Classes="flow-control"
              ToolTip.Tip="Reset Zoom (100%)">
        <TextBlock Text="1:1" 
                   FontSize="11" 
                   FontWeight="SemiBold"
                   Foreground="{DynamicResource FlowControlsIconStroke}"/>
      </Button>
      
    </StackPanel>
  </Border>

</UserControl>
